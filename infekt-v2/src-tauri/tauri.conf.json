{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "iNFekt",
    "version": "2.0.0"
  },
  "tauri": {
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "org.syndicode.infekt-v2",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "iNFekt v2",
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "minWidth": 550,
        "minHeight": 200,
        "width": 750,
        "height": 800
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
